# $Id: Portfile 57375 2009-09-10 08:16:41Z ryandesign@macports.org $

PortSystem		    1.0

name			    pgtcl
version			    2.6.3
#revision            2
categories		    databases
maintainers		    nstanger-local
description 		Tcl PostgreSQL interface
long_description	Tcl client interface to PostgreSQL
homepage		    http://flightaware.github.io/Pgtcl/
master_sites		https://github.com/flightaware/Pgtcl/tarball/master
platforms		    darwin
checksums		    rmd160  415410c21895f9263a2ff703d04ed374c25ad562 \
                    sha256  3fd56901af487cc0a800eb88aedf7e0405e604c159a6f76d6ed95181123adbb2
worksrcdir          ${name}${version}

use_autoconf        yes
use_parallel_build  no
configure.env       PATH=$env(PATH):${prefix}/lib/postgresql10/bin
configure.args      --prefix=${prefix} --exec-prefix=${prefix}
depends_lib		    port:tcl \
			        port:postgresql10

post-extract {
    file rename [glob ${workpath}/flightaware-Pgtcl-*] ${worksrcpath}
}

destroot.target     install-binaries install-libraries

